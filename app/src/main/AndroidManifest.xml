<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.docter.docter">
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.WRITE_SMS"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION"/>

    <!--gps and geofences-->
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY"/>
    <!--maps permission-->
    <permission
            android:name="com.cummulations.AltroSmart.permission.MAPS_RECEIVE"
            android:protectionLevel="signature"/>
    <uses-permission android:name="com.cummulations.AltroSmart.permission.MAPS_RECEIVE"/>

    <application
            android:name=".main.MainApplication"
            android:allowBackup="true"
            android:icon="@mipmap/app_icon"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/app_icon"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".ui.splash.Statewise">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>
        <activity android:name=".HomeView"
                  android:theme="@style/SplashTheme">
        </activity>

        <activity android:name=".ui.splash.SearchDoctor"
                  android:theme="@style/SearchdoctorTheme"/>

        <activity android:name=".ui.splash.DoctorListDetail"
                  android:theme="@style/SearchdoctorTheme"/>
        <activity android:name=".ui.splash.SearchDoctorByName"
                  android:theme="@style/SearchdoctorTheme"/>

        <activity android:name=".ui.splash.DoctorList"
                  android:theme="@style/SearchdoctorTheme"/>
        <activity android:name=".SearchDocterByName"
                  android:theme="@style/SearchdoctorTheme"/>
        <activity
                android:name=".ui.splash.SplashActivity"
                android:theme="@style/SplashTheme">
        </activity>
    </application>

</manifest>