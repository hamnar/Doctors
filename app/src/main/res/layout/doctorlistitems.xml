<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
            android:id="@+id/doctorlistsclick"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_250"
            style="@style/AppCard">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_230">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_doctorprofile"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/round_rect_btn_blue"
                    app:srcCompat="@drawable/profile_dummy_female"
                    android:layout_margin="@dimen/margin_10"
                    android:padding="@dimen/margin_10"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="0.025"
                    app:layout_constraintVertical_bias="0.28"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_doctorname"
                    style="@style/txt_headerseaction_bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Huanin An, M.D"
                    android:textColor="@color/app_blue"
                    android:textSize="@dimen/text_size_20"
                    app:layout_goneMarginStart="@dimen/margin_10"
                    android:layout_marginStart="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/img_doctorprofile"/>
            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_doctorspecialist"
                    style="@style/txt_footerseaction_regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Family Medicine"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18"
                    app:layout_goneMarginStart="@dimen/margin_10"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_marginEnd="@dimen/margin_8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_doctorname"
                    app:layout_constraintStart_toEndOf="@+id/img_doctorprofile"/>
            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_milesaway"
                    style="@style/txt_footerseaction_regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0.0 miles away"
                    android:drawableTint="@color/black"
                    android:drawablePadding="@dimen/margin_10"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/phoneicon"
                    android:textSize="@dimen/text_size_16"
                    app:layout_goneMarginStart="@dimen/margin_10"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_doctorspecialist"
                    app:layout_constraintStart_toEndOf="@+id/img_doctorprofile"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_address"
                    style="@style/txt_footerseaction_regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="289 7Th AVE"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_milesaway"
                    app:layout_constraintStart_toEndOf="@+id/img_doctorprofile"/>
            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_address2"
                    style="@style/txt_footerseaction_regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="NewYork,NY10001"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/margin_5"
                    android:textSize="@dimen/text_size_16"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_address"
                    app:layout_constraintStart_toEndOf="@+id/img_doctorprofile"
                    android:layout_marginStart="@dimen/margin_10"/>
            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_calldoctor"
                    style="@style/txt_footerseaction_regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="(202) 534-4534"
                    android:drawableLeft="@drawable/phoneicon"
                    android:textColor="@color/white_color"
                    android:drawableTint="@color/white_color"
                    android:textSize="@dimen/text_size_16"
                    app:layout_goneMarginStart="@dimen/margin_10"
                    android:drawablePadding="@dimen/margin_8"
                    android:layout_marginTop="16dp"
                    android:padding="@dimen/margin_10"
                    android:background="@drawable/round_rect_btn_bluefill"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/txt_getdirection"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_getdirection"
                    style="@style/txt_footerseaction_regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/getdirection"
                    android:textColor="@color/white_color"
                    android:drawableTint="@color/white_color"
                    android:padding="@dimen/margin_10"
                    android:background="@drawable/round_rect_btn_bluefill"
                    android:drawableLeft="@drawable/phoneicon"
                    android:drawablePadding="@dimen/margin_8"
                    android:layout_marginStart="@dimen/margin_5"
                    android:textSize="@dimen/text_size_16"
                    android:tag="@string/getdirection"
                    app:layout_constraintLeft_toRightOf="@+id/txt_calldoctor"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>