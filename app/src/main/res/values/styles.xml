<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white_color</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/green</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowDisablePreview">false</item>
    </style>
    <style name="SearchdoctorTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowDisablePreview">false</item>
    </style>
    <style name="txt_headerseaction_bold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/darktone</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="txt_footerseaction_regular" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/darktone</item>
        <item name="android:textSize">16sp</item>

    </style>
    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardBackgroundColor">#ffffff</item>
        <item name="strokeColor">#efefef</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">0dp</item>
    </style>

</resources>
